<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="401.0" prefWidth="403.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bot.chatbot.LoginController">
    <!-- Поле для ввода имени -->
    <TextField fx:id="userNameField" layoutX="89.0" layoutY="152.0"
               prefHeight="26.0" prefWidth="226.0" promptText="Введите имя пользователя" />
    <!-- Кнопка входа -->
    <Button layoutX="132.0" layoutY="213.0" onAction="#handleLogin"
            prefHeight="26.0" prefWidth="132.0" text="Войти" />
    <!-- Заголовок -->
    <Label layoutX="165.0" layoutY="35.0" prefHeight="46.0" prefWidth="72.0"
           text="Вход" textAlignment="CENTER">
        <font>
            <Font size="31.0" />
        </font>
    </Label>
    <!-- Подзаголовок -->
    <Label layoutX="136.0" layoutY="81.0" prefHeight="18.0" prefWidth="132.0"
           text="Войдите в свой аккаунт" />
    <!-- Метка для поля ввода -->
    <Label layoutX="89.0" layoutY="133.0" prefHeight="18.0" prefWidth="36.0" text="Name" />
</AnchorPane>